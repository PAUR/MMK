<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PianoBaseStyle">
        <Setter Property="Control.MaxHeight" Value="160"/>
        <Setter Property="Control.MinHeight" Value="80"/>
    </Style>

    <Style x:Key="PianoKeyStyle" BasedOn="{StaticResource PianoBaseStyle}">
        <Setter Property="Control.MinWidth" Value="20"/>
        <Setter Property="Control.MaxWidth" Value="40"/>
    </Style>

    <Style x:Key="PianoKeyBoardStyle" BasedOn="{StaticResource PianoBaseStyle}">        
    </Style>
    
</ResourceDictionary>