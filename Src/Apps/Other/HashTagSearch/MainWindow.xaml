<Window x:Class="MMK.HashTagSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MMK.HashTagSearch"
        xmlns:controls="clr-namespace:MMK.HashTagSearch.Controls"
        SnapsToDevicePixels="True"
        Title="MMK KeySearch"
        Style="{StaticResource MainStyle}" FontFamily="Segoe UI Light">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130pt"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:SearchNavigation />

        <controls:SearchContent Grid.Column="1"/>
    </Grid>
</Window>
