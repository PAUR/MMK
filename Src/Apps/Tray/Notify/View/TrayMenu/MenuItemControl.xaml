<view:MenuItemControlBase x:Class="MMK.Notify.View.TrayMenu.MenuItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:MMK.Notify.View.TrayMenu"
             mc:Ignorable="d">
    <Button Margin="-7px,0,-7px,0"
            HorizontalContentAlignment="Left"
            Command="{Binding Command, RelativeSource={RelativeSource AncestorType={x:Type view:MenuItemControl}}}"
            Style="{StaticResource ClearButtonStyle}">
        <Grid Height="32px">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32px"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="{Binding Image, RelativeSource={RelativeSource AncestorType={x:Type view:MenuItemControl}}}" 
                   Margin="6px"/>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" 
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type view:MenuItemControl}}}"/>
        </Grid>
    </Button>
</view:MenuItemControlBase>
